<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_loginFragment_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryAb"
        android:gravity="center"
        android:text="لطفا وارد حساب کاربری خود شوید"
        android:textColor="@color/colorWhite" />

    <EditText
        android:id="@+id/edt_loginFragment_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_loginFragment_title"
        android:layout_margin="16dp"
        android:drawableRight="@drawable/ic_email_black_24dp"
        android:gravity="center"
        android:hint="پست الکترونیک"
        android:inputType="textEmailAddress"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt_loginFragment_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_loginFragment_email"
        android:layout_margin="16dp"
        android:drawableRight="@drawable/ic_vpn_key_black_24dp"
        android:gravity="center"
        android:hint="رمز عبور"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/edt_loginFragment_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_loginFragment_password"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_vpn_key_black_24dp" />

    <TextView
        android:id="@+id/txt_loginFragment_forgetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_loginFragment_password"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@+id/edt_loginFragment_key"
        android:text="فراموشی رمز عبور"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_loginFragment_forgetPass"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_loginFragment_signup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight=".5"
            android:background="@drawable/btn_signup_style"
            android:padding="15dp"
            android:text="ثبت نام"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_loginFragment_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight=".5"
            android:background="@drawable/btn_login_style"
            android:padding="15dp"
            android:text="ورود"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
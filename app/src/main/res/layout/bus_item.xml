<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_busItem_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_busItem_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:textSize="16sp"
            tools:text="تهران" />

        <TextView
            android:id="@+id/txt_busItem_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/txt_company_style"
            android:padding="8dp"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            tools:text="Scania" />
        
        <TextView
            android:id="@+id/txt_busItem_sourceTerminal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_busItem_source"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:textSize="16sp"
            tools:text="ترمینال جنوب" />

        <TextView
            android:id="@+id/txt_busItem_destinationTerminal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_busItem_company"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:textSize="16sp"
            tools:text="ترمینال مشهد" />

        <View
            android:id="@+id/view_busItem_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txt_busItem_destinationTerminal"
            android:layout_marginTop="8dp"
            android:background="@color/colorGray600" />

        <TextView
            android:id="@+id/txt_busItem_capacityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_busItem_line"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            tools:text="ظرفیت موجود:" />

        <TextView
            android:id="@+id/txt_busItem_capacityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_busItem_line"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/txt_busItem_capacityTitle"
            android:textSize="16sp"
            tools:text="10 نفر" />

        <TextView
            android:id="@+id/txt_busItem_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_busItem_line"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorAccentAb"
            android:textSize="16sp"
            tools:text="123,456 ریال" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/ll_chairItem_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chair_blue_style"
        android:contentDescription="disable"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:id="@+id/img_chairItem_left"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_event_seat_black_24dp" />

        <TextView
            android:id="@+id/txt_chairItem_leftNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_chairItem_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/ll_chairItem_left"
        android:background="@drawable/chair_blue_style"
        android:contentDescription="disable"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:id="@+id/img_chairItem_center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_event_seat_black_24dp" />

        <TextView
            android:id="@+id/txt_chairItem_centerNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_chairItem_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="40dp"
        android:background="@drawable/chair_blue_style"
        android:contentDescription="disable"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:id="@+id/img_chairItem_right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_event_seat_black_24dp" />

        <TextView
            android:id="@+id/txt_chairItem_rightNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="3" />

    </LinearLayout>

</RelativeLayout>